<Window x:Class="SeatingHelper.ChartDisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dd="urn:gong-wpf-dragdrop"
        xmlns:local="clr-namespace:SeatingHelper"
        mc:Ignorable="d"
        Title="ChartDisplayWindow" Height="500" Width="1000">
    <Grid>
        <ItemsControl ItemsSource="{Binding SeatingChart}">
            <ItemsControl.ItemTemplate>
                <!-- DataTemplate for each OuterItem -->
                <DataTemplate>
                    <StackPanel Margin="0,5,0,5">
                        <!-- Display the GroupName -->
                        <TextBlock Text="{Binding RowNumber}" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>

                        <!-- Inner ItemsControl bound to the InnerList of the current OuterItem -->
                        <ItemsControl ItemsSource="{Binding InnerList}"
                                      HorizontalAlignment="Stretch"
                                      dd:DragDrop.IsDragSource="True"
                                      dd:DragDrop.IsDropTarget="True">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <!-- Arranges items in a single horizontal line -->
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <!-- DataTemplate for each InnerItem -->
                                <DataTemplate>
                                    <Border BorderBrush="LightGray" BorderThickness="1" Padding="5">
                                        <!-- Display the InnerItem Name -->
                                        <TextBlock Width="85" TextTrimming="CharacterEllipsis" FontSize="10">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0}: {1}">
                                                    <Binding Path="PartName" />
                                                    <Binding Path="PlayerName" />
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Button x:Name="Save" Margin="600,343,46,59" Click="SaveButton_Click" Content="Save Changes" />
    </Grid>
</Window>
